    <div class="container">
        <form role="form" class="col-md-10 col-md-offset-1 input_form" method="post">
            <legend>Add a Ticket</legend>
            <div class="form-group">
                <label for="sumary">Summary:</label>
                <input type="text" class="form-control" id="summary" name="summary" placeholder="Summary">
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" rows="4" placeholder="Add Description"></textarea>
            </div>
            <div class="form-group">
                <label for="priority">Priority:</label>
                <select class="form-control" name="priority" id="priority">
                    <option name="Trivial" value="Trivial">Trivial</option>
                    <option name="Minor" value="Minor">Minor</option>
                    <option name="Major" value="Major">Major</option>
                    <option name="Critical" value="Critical">Critical</option>
                    <option name="Blocker" value="Blocker">Blocker</option>
                </select>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Add Ticket</button>
            </div>
        </form>
    </div>
    
